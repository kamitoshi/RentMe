<%= form_for @suggest do |f| %>
  <div class="field">
    <%= f.label :title, "掲載タイトル", class:"label" %>
    <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"form-control", placeholder: "例：ホールスタッフやりたいです" %>
  </div>

  <div class="field">
    <%= f.label :price, "単価", class:"label" %>
    <div class="input-group">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputPrice">時給</label>
      </div>
      <%= f.number_field :price, autofocus: true, autocomplete: "price", class:"form-control", placeholder: "1500" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :target_date, "日付", class:"label" %>
    <%= f.date_field :target_date, autofocus: true, autocomplete: "target_date", class:"form-control" %>
  </div>

  <div class="field">
    <div class="row">
      <div class="col">
        <%= f.label :opening, "始業時間", class:"label" %>
        <%= f.time_field :opening, autofocus: true, autocomplete: "opening", class:"form-control" %>
      </div>
      <div class="col">
        <%= f.label :closing, "終業時間", class:"label" %>
        <%= f.time_field :closing, autofocus: true, autocomplete: "closing", class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="field">
    <div id="location_select" class="selectbox">
      <% if current_worker.locations.any? %>
        <p class="label">勤務希望地（複数選択可）</p>
        <%= f.collection_check_boxes :location_ids, current_worker.locations.all, :id, :place, include_hidden: false %>
      <% else %>
        <p class="center">まだ希望地が登録されていません</p>
      <% end %>
    </div>
  </div>

  <div class="field selectbox">
    <p class="label">希望業務内容（複数選択可）</p>
    <%= f.collection_check_boxes :type_ids, Type.all, :id, :name, include_hidden: false  %>
  </div>

  <div class="field">
    <p><%= f.label :detail, "詳細", class:"label" %>（上記以外の希望がある場合は、こちらに記入してください）</p>
    <% placeholder = "例：手荒れが最近ひどいので、洗い場など水場は厳しいです。できればホールのみでお願いしたいです。" %>
    <%= f.text_area :detail, autofocus: true, autocomplete: "detail", class:"form-control", style:"height:300px", placeholder: placeholder %>
  </div>

  <div class="actions wid-50 ma-a pa-y-30">
    <%= f.submit submit_title, class:"btn btn-primary wid-100" %>
  </div>

<% end %>