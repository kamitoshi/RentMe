<div class="container">
  <div class="row">
    <div class="col-12">
      <%= form_for @suggest do |f| %>
        <div class="field">
          <%= f.label :title, "掲載タイトル" %>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :types, "希望業務内容（複数選択可）" %><br>
          <%= f.collection_check_boxes :type_ids, Type.all, :id, :name %>
        </div>

        <div class="field">
          <%= f.label :price, "単価" %><br />
          <div class="input-group">
            <div class="input-group-prepend">
              <label class="input-group-text" for="inputPrice">時給</label>
            </div>
            <%= f.number_field :price, autofocus: true, autocomplete: "price", class:"form-control" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :target_date, "日付" %>
          <%= f.date_field :target_date, autofocus: true, autocomplete: "target_date", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :opening, "始業時間" %><br />
          <%= f.time_field :opening, autofocus: true, autocomplete: "opening", class:"form-control" %>
          <%= f.label :closing, "終業時間" %><br />
          <%= f.time_field :closing, autofocus: true, autocomplete: "closing", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :detail, "掲載内容詳細" %><br />
          <%= f.text_area :detail, autofocus: true, autocomplete: "detail", class:"form-control" %>
        </div>

        <div class="field">
          <div id="location-select">
            <%= render partial: "locations/location_select", locals:{locations: current_worker.locations, f: f} %>
          </div>
        </div>  

        <div class="actions ma-t-50">
          <%= f.submit "掲載する" %>
        </div>

      <% end %>
      <div id="location-input">
        <%= render "locations/location_input" %>
      </div>
    </div>
  </div>
</div>