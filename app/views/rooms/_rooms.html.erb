<div class="main">
  <% if rooms.any? %>
    <% rooms.each do |room| %>
      <div class="main-index">
        <div class="room_user-image dis-ib pa-5">
          <%= image_tag "no_image.png", size: "50x50" %>
        </div>
        <div class="user-info dis-ib">
          <div class="user-name">
            <% if worker_signed_in? %>
              <%= link_to room.employer.store_name, room_path(room) %>
            <% elsif employer_signed_in? %>
              <%= link_to room.worker.fullname, room_path(room) %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="center">まだメッセージを送れる相手がいません</p>
  <% end %>
</div>