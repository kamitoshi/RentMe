<div class="contain">
  <div class="left-box">
    <div class="room_header-box">
      <h3 class="header">メッセージ</h3>
    </div>
    <div class="room_main-box">
      <%= render "rooms/rooms", rooms: @rooms %>
    </div>
  </div>
  <div class="right-box">
    <div class="message_header-box" id="message_title">
      <h4 class="header">チャットルームを選択してください</h4>
    </div>
    <div class="message_main-box" id="message_index">
      <div class="message_content-box">
        <p>チャットルームを選択してください</p>
      </div>
      <div class="message_form-box">
        <%= render "messages/form" %>
      </div>
    </div>
  </div>
</div>
