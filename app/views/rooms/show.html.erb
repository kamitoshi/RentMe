<div class="contain">
  <div class="left-box">
    <div class="room_header-box">
      <h3 class="header">メッセージ</h3>
    </div>
    <div class="room_main-box">
      <%= render "rooms/rooms", rooms: @rooms %>
    </div>
  </div>
  <div class="right-box">
    <div class="message_header-box" id="message_title">
      <h4 class="header"><%= render "messages/name", room: @room %></h4>
    </div>
    <div class="message_main-box" id="message_index">
      <% if @room.messages.any? %>
        <%= render "messages/message", message: @room.messages %>
      <% else %>
        <p class="center">
          契約が成立しました。<br>
          連絡を送ってみましょう。
        </p>
      <% end %>
      <%= render "messages/form" %>
    </div>
  </div>
</div>