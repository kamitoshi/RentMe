<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>新規登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field">
              <%= f.label :last_name, "氏名" %>
              <div class="row">
                <div class="col">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control", placeholder: "苗字" %>
                </div>
                <div class="col">
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control", placeholder: "名前" %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :kana_last_name, "カナ氏名" %>
              <div class="row">
                <div class="col">
                  <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", class:"form-control", placeholder: "カナ苗字" %>
                </div>
                <div class="col">
                  <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name", class:"form-control", placeholder: "カナ名前" %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :sex, "性別" %><span class="ma-l-20">※ 登録後の変更はできません</span><br />
              <div class="radio_men dis-ib">
                <%= f.radio_button :sex, :men %>
                <%= f.label :sex, "男性", value: :men %>
              </div>
              <div class="radio_women dis-ib ma-l-20">
                <%= f.radio_button :sex, :women %>
                <%= f.label :sex, "女性", value: :women %>
              </div>
              <div class="radio_others dis-ib ma-l-20">
                <%= f.radio_button :sex, :others %>
                <%= f.label :sex, "その他", value: :others %>
              </div>
            </div>

            <div class="field">
              <%= f.label :birthday, "生年月日" %><br />
              <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :phone_number, "電話番号（ハイフンなし）" %><br />
              <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control", placeholder: "例:08012345678" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
              <%= f.number_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control", placeholder: "例:1610001" %>
            </div>

            <div class="field">
              <%= f.label :prefecture, "都道府県" %><br>
              <%= f.select :prefecture, Worker.prefectures.keys, {prompt: '選択してください'}, class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :city, "市区町村" %><br />
              <%= f.text_field :city, autofocus: true, autocomplete: "city", class:"form-control", placeholder: "例:新宿区三丁目" %>
            </div>

            <div class="field">
              <%= f.label :street, "番地" %><br />
              <%= f.text_field :street, autofocus: true, autocomplete: "street", class:"form-control", placeholder: "例:1-20" %>
            </div>

            <div class="field">
              <%= f.label :building, "マンション名等" %><br />
              <%= f.text_field :building, autofocus: true, autocomplete: "building", class:"form-control", placeholder: "例:メゾン　３０２号室" %>
            </div>

            <div class="field">
              <%= f.label :introduction, "自己紹介文" %><br />
              <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :image, "プロフィール画像" %><br />
              <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
            </div>

            <div class="field">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "パスワード確認" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>