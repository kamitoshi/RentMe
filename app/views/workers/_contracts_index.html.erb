<div class="contract_index">
  <h4 class="sub-title">契約中の案件</h4>
  <div class="index-box border scroll-box">
    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th width="5%"></th>
          <th scope="col" width="30%">勤務日</th>
          <th scope="col" width="18%">勤務時間</th>
          <th scope="col" width="17%">主な業務</th>
          <th scope="col" width="30%">勤務場所</th>
        </tr>
      </thead>
      <% if @contracts.any? %>
        <tbody>
          <% @contracts.each_with_index do |contract, index| %>
            <tr class="position-relative">
              <th scope="row"><%= link_to index + 1, contract_path(contract) %></th>
              <td><%= contract.target_date.strftime("%Y年%m月%d日") %>（<%= weekday(contract.target_date) %>）</td>
              <td><%= contract.opening.strftime("%H:%M") %>〜<%= contract.closing.strftime("%H:%M") %></td>
              <td><%= contract.job_description %></td>
              <td><%= contract.employer.store_name %></td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
          <td colspan="5" class="center">契約中の案件はありません</td>
        </tbody>
      <% end %>
    </table>
  </div>
</div>