<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="worker_box row">
        <div class="col-4">
          <div class="worker_image-box center">
            <% if @worker.image.present? %>
              <%= @worker.image %>
            <% else %>
              <%= image_tag "no_image.png", size: "200x250" %>
            <% end %>
          </div>
          <% if worker_signed_in? %>
            <div class="worker_image-edit wid-60 ma-a pa-t-30">
              <%= link_to "プロフィール画像変更", image_edit_worker_path(@worker), class:"btn btn-primary wid-100" %>
            </div>
          <% end %>
        </div>
        <div class="col-8">
          <div class="worker_name-box">
            <%= @worker.kana_fullname %><br>
            <span class="font-30"><%= @worker.fullname %></span>
          </div>
          <div class="worker_info-box">
            <div class="sex">
              <p>性別：<%= @worker.sex_i18n %>（満<%= @worker.age %>歳）</p>
            </div>
            <div class="birthday">
              <p>生年月日：<%= @worker.birthday.strftime("%Y年%m月%d日") %>（満<%= @worker.age %>歳）</p>
            </div>
            <div class="address">
              <p>
                〒<%= @worker.postal_code %><br>
                <%= @worker.address %>
              </p>
            </div>
            <div class="phone_number">
              <p>電話番号：<%= @worker.phone_number %></p>
            </div>
            <div class="introduction">
              <p>自己紹介文</p>
              <%= @worker.introduction %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="review_title">
    <h3 class="sub-title">評価</h3>
  </div>
  <% if @worker.reviews.any? %>
    <div class="review_content-box row">
      <div class="col-3 pa-t-75">
        <table class="table">
          <tbody>
            <tr>
              <th scope="row">総合評価</th>
              <td><%= @worker.total_rates %></td>
            </tr>
            <tr>
              <th scope="row">接客</th>
              <td><%= @worker.service_rates %></td>
            </tr>
            <tr>
              <th scope="row">スキル</th>
              <td><%= @worker.skill_rates %></td>
            </tr>
            <tr>
              <th scope="row">声の大きさ</th>
              <td><%= @worker.voice_rates %></td>
            </tr>
            <tr>
              <th scope="row">真面目さ</th>
              <td><%= @worker.earnest_rates %></td>
            </tr>
            <tr>
              <th scope="row">笑顔</th>
              <td><%= @worker.smile_rates %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-9">
        <canvas id="myChart"></canvas>
      </div>
    </div>
  <% else %>
    <div class="review_content-box row">
      <p class="center">まだ評価されていません</p>
    </div>
  <% end %>
</div>

<script>
  var ctx = document.getElementById("myChart");
  var myRadarChart = new Chart(ctx, {
    type: 'radar', 
    data: { 
      labels: ["接客", "スキル", "声の大きさ", "真面目さ", "笑顔"],
      datasets: [{
        label: '評価',
        backgroundColor: 'RGBA(115,255,25, 0.5)',
        borderColor: 'RGBA(115,255,25, 1)',
        borderWidth: 1,
        data: [
          <%= @worker.service_rates %>,
          <%= @worker.skill_rates %>,
          <%= @worker.voice_rates %>,
          <%= @worker.earnest_rates %>,
          <%= @worker.smile_rates %>
        ]
      }]
    },
    options: {
      title: {
        display: true,
        text: '平均評価'
      },
      scale:{
        ticks:{
          suggestedMin: 0,
          suggestedMax: 10,
          stepSize: 2,
        }
      }
    }
  });
</script>